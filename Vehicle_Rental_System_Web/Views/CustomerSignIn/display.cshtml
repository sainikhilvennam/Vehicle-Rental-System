@using Vehicle_Rental_System.MODEL
@model List<Vehicle>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Available Vehicles</h2>
            <p class="text-success">Welcome, @ViewBag.CustomerEmail!</p>
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Brand Model</th>
                            <th>Mileage</th>
                            <th>Registration Number</th>
                            <th>Seating Capacity</th>
                            <th>Rental Rate</th>
                            <th>Availability</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vehicle in Model)
                        {
                            <tr>
                                <td>@vehicle.BrandModel</td>
                                <td>@vehicle.Mileage</td>
                                <td>@vehicle.RegistrationNumber</td>
                                <td>@vehicle.SeatingCapacity</td>
                                <td>â‚¹@vehicle.RentalRate</td>
                                <td>@vehicle.IsAvailable</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    <h4>No Vehicles Available</h4>
                    <p>Sorry, there are no vehicles available at the moment. Please check back later.</p>
                </div>
            </div>
        </div>
    }

    <div class="row mt-3">
        <div class="col-12">
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-danger">Sign Out</a>
        </div>
    </div>
</div>