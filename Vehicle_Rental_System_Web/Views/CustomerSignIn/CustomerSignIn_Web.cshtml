@using Vehicle_Rental_System_Web.Models.ViewModels;
@model CustomerSignInViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Customer Sign In</h3>
                </div>
                <div class="card-body">
                    @* <!-- Display validation errors as popup -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <script>
                            window.onload = function() {
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <text>alert('@Html.Raw(error.ErrorMessage)');</text>
                                }
                            };
                        </script>
                    } *@
                    
                    <form asp-action="CustomerSignIn_Web" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="EmailId">Email Address:</label>
                            <input asp-for="EmailId" type="email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="EmailId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password">Password:</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back</a>
                        </div>
                    </form>

                    <hr>

                    <div class="text-center">
                        <p>Don't have an account?</p>
                        <a href="@Url.Action("CustomerSignUp_Web", "CustomerSignUp")" class="btn btn-outline-success">Sign Up Here</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
